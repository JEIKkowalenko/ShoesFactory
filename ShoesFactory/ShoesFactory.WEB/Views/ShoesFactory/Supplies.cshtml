@model IEnumerable<ShoesFactory.WEB.Models.SupplyViewModel>
@using ShoesFactory.WEB.Models;
@using ShoesFactory.BLL.Services;
@{
    ViewBag.Title = "Supplies";
}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Редагування</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/ShoesFactory/AddSupply" method="post" id="AddSupply">
                    <input type="hidden" name="Id" value="" />
                    <div class="form-group row">
                        <label for="MaterialName" class="col-sm-2 col-form-label">Назва матеріалу</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="MaterialName" name="MaterialName" value="" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="SupplierName" class="col-sm-2 col-form-label">Ім'я поставника</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="SupplierName" name="SupplierName" value="" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Count" class="col-sm-2 col-form-label">Кількість</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="Count" name="Count" value="" placeholder="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Price" class="col-sm-2 col-form-label">Ціна</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="Price" name="Price" value="" placeholder="">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button form="AddSupply" class="btn btn-primary" type="submit">Добре</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Відмінити</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel1">Видалити запис?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/ShoesFactory/DeleteSupply" method="get" id="deleteMaterial">
                    <input type="hidden" name="id" value="" id="deleteId" />
                </form>
            </div>
            <div class="modal-footer">
                <button form="deleteMaterial" class="btn btn-primary" type="submit" id="DeleteAprove">Так</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Ні</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover border-bottom">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Матеріал</th>
                    <th scope="col">Поставник</th>
                    <th scope="col">Ціна</th>
                    <th scope="col">Кількість</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody class="">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td class="id">@item.MaterialId</td>
                        <td>@item.SupplierId</td>
                        <td>@item.Price</td>
                        <td>@item.Count</td>
                        <td class="text-right pr-0">
                            <a class="btn btn-success mr-2 updateSupply" href="#" role="button" data-toggle="modal" data-target="#exampleModal" id="">Редагувати</a>
                            <a class="btn btn-danger deleteButton" href="#" role="button" data-toggle="modal" data-target="#exampleModal1">Видалити</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="text-right">
            <a class="btn btn-primary px-3" href="#" role="button" data-toggle="modal" data-target="#exampleModal">Додати</a>
        </div>
    </div>
</div>