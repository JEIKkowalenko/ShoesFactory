<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShoesFactory</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="container body-content">
        @if (ViewBag.Title != "Begin")
        {
            switch (ViewBag.Title)
            {
                case "Supplies":
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Materials">Матеріали</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" href="/ShoesFactory/Supplies">Поставки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="/ShoesFactory/Suppliers">Поставники</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Shoes">Моделі взуття</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Consigment">Партії</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Employers">Працівники</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    break;

                case "Materials":
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" href="/ShoesFactory/Materials">Матеріали</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="/ShoesFactory/Supplies">Поставки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Suppliers">Поставники</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Shoes">Моделі взуття</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Consigment">Партії</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Employers">Працівники</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    break;

                case "Suppliers":
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Materials">Матеріали</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " href="/ShoesFactory/Supplies">Поставки</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active" href="/ShoesFactory/Suppliers">Поставники</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Shoes">Моделі взуття</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Consigment">Партії</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/ShoesFactory/Employers">Працівники</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    break;
            }

        }

        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/MyScript.js"></script>
</body>
</html>
